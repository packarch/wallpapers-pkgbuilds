# Maintainer: Aditya Shakya <adi1090x@gmail.com>

pkgname=packarch-backgrounds-extra
pkgver=1.0
pkgrel=3
pkgdesc="Extra wallpapers for Packarch"
url="https://github.com/packarch-os/packarch-wallpapers"
arch=('any')
license=('GPL3')
makedepends=()
depends=()
conflicts=()
provides=("${pkgname}")
options=(!strip !emptydirs)

prepare() {
	cp -af ../files/. ${srcdir}
}

package() {
	local _bgdir=${pkgdir}/usr/share/backgrounds/extra
	mkdir -p "$_bgdir"
	cp -r ${srcdir}/* "$_bgdir"
}
